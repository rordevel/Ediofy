= semantic_form_for ediofy_group_path do |f|
  .sortFilterListContainer
    %ul.list-inline.text-right
      - if ( (Group.find(params[:id]).owners.include? current_user) || (Group.find(params[:id]).admins.include? current_user) )
        %li.archivedcb
          .sortBy.text-right
            %label#archived_label Show archived
            = check_box_tag 'archived_c', 'archived'
      %li
        .sortBy.text-right
          %label Type:
          = content_type_select(nil, false)
      %li
        .sortBy.text-right
          %label Sort by:
          = sort_by_select(:sort_by, false)

          = hidden_field(:search, :value => params[:request])