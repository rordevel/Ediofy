%li.question[question]
  = link_to [:ediofy, question], class: 'thumb' do
    - if question.media.present?
      = image_tag question.media.first.file.thumb.url, size: '32x32', alt: truncate_html(question.body, 65)
    - else
      = image_tag 'ediofy/question-default.png', size: '32x32', alt: truncate_html(question.body, 65)
  .info
    .title= link_to truncate_html(question.body, 65), [:ediofy, question]
    - if question.user.present?
      .user= t '.by_html', user: link_to(question.user.full_name, [:ediofy, question.user])